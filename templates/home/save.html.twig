<legend class="mb-4">Créer un nouveau Sondage</legend>
	<div class="form-check">
		<label class="form-check-label">
			<input type="radio" class="form-check-input" id="qcm" name="type_poll" id="optionsRadios2" value="qcm">
			Sondage à choix multilples
		</label>
	</div>
	<div class="form-check disabled">
		<label class="form-check-label">
			<input type="radio" class="form-check-input" id="yes_no" name="type_poll" id="optionsRadios3" value="yes_no">
			Oui / Non
		</label>
	<div class="col-6">
						<div class="mt-3">
							<strong>{{responses.content}}</strong>
							<div class="progress" style="height: 20px;">
								<div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: 28%;" aria-valuenow="{{responses.score}}" aria-valuemin="0" aria-valuemax="100">28%</div>
							</div>
						</div>
					</div>
